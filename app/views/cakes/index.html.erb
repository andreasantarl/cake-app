<p id="notice"><%= notice %></p>

<h1>Cakes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cakes.each do |cake| %>
      <tr>
        <td><%= cake.title %></td>
        <td><%= number_to_currency(cake.price) %></td>
        <td><%= image_tag(cake.image_url, size: '100') if cake.image? %></td>
        <td><%= link_to 'Show', cake %></td>
        <td><%= link_to 'Edit', edit_cake_path(cake) %></td>
        <td><%= link_to 'Destroy', cake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Cake', new_cake_path, method: :get %>
<% else %>
  Sign in to add a new cake
<% end %>
